<h1> Start Conversation with <%= @recipient.name %> </h1>
<div class="row">
    <div class="col-9">
        <%= form_tag conversations_path, method: :post do %>
            <%= text_field_tag :user_id, @recipient.id, hidden: true%>
            <div class="form-group">
                <%= label_tag :subject%> <br>
                <%= text_field_tag :subject, nil, class:"form-control" %>
            </div>
            <div class="form-group">
                <%= label_tag :body%> <br>
                <%= text_area_tag :body, nil, class:"form-control" %>
            </div>
            <p class="mt-3">
                <%= submit_tag "Start conversation", class:"btn my-button" %>
            </p>
        <% end %>
    </div>
</div>